// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model User {
  id Int @id @default(autoincrement())
  username String @unique
  password String
  role String
  profile Profile?

}

model Profile {
  firstName String 
  lastName String
  ///skills / interests
  bio String?
  address String
  homePhoneNumber String?
  workPhoneNumber String?
  cellPhoneNumber String
  email String
  education String?
  currentLicenses String?
  driversLicenseOnFile Boolean
  socialSecurityOnFile Boolean
  approvalStatus String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int    @unique
  emergencyInfo EmergencyContactInfo?
  availability Availability?
  preferredCenters VolunteerPrefers?
}

model Availability {
  volunteerId Int @id
  volunteer Profile @relation(fields: [volunteerId], references: [userId], onDelete: Cascade)
}

model VolunteerPrefers {

  volunteer Profile @relation(fields: [volunteerId], references: [userId], onDelete: Cascade)
  center Center @relation(fields: [centerId], references: [id])
  volunteerId Int @unique
  centerId Int @unique
}

model Center {
  id Int @id @default(autoincrement())
  name String 
  preference VolunteerPrefers?
  opportunities Opportunity[]

}

model EmergencyContactInfo {
  contactName String
  contactHomePhoneNumber String
  contactWorkPhoneNumber String?
  contactEmail String?
  contactAddress String?
  userId Int @unique
  profile Profile @relation(fields: [userId], references: [userId], onDelete: Cascade)
}

model Opportunity {
  id Int @id @default(autoincrement())
  name String
  startTime String //change data type later
  endTime String //change data type later
  center Center @relation(fields: [centerId], references: [id])
  centerId Int
  location String
  description String
  
}